@model music.Models.Band;

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>
<h3>¿Estas seguro de eliminar este registro?</h3>
<div>
    <h4>Banda</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BandName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BandNumberMembers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BandNumberMembers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BandGenre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BandGenre)
        </dd>
    </dl>
</div>

<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="BandId" />
        <input type="submit" class="btn btn-danger" value="Borrar" />
        <a asp-action="Index" class="btn btn-success">Regresar</a>
    </form>
</div>