@model music.Models.Band;

@{
    ViewData["Title"] = "Editar Banda Musical";
}

<h2>Editar</h2>
<hr />
<div class="row">
    <div class="col-sm-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BandId" />
            <div class="form-group">
                <label asp-for="BandName" class="control-label"></label>
                <input asp-for="BandName" class="form-control" />
                <span asp-validation-for="BandName" class="text-danger"></span>
                <label asp-for="BandNumberMembers" class="control-label"></label>
                <input asp-for="BandNumberMembers" class="form-control" />
                <span asp-validation-for="BandNumberMembers" class="text-danger"></span>
                <label asp-for="BandGenre" class="control-label"></label>
                <input asp-for="BandGenre" class="form-control" />
                <span asp-validation-for="BandGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}